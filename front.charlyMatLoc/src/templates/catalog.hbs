<section id="page-catalog" class="page">
    <div class="container">
        <h2>Catalogue des outils</h2>

        <div id="tools-container" class="grid">
            {{#each tools}} {{!-- La variable 'tools' vient de main.js --}}
            {{!-- On transforme la carte en lien avec data-page et data-id pour la navigation --}}
            <a href="#" class="card" data-page="tool-detail" data-id="{{tool_id}}">
                <img src="{{image_url}}" alt="{{name}}" class="card-img">
                <div class="card-content">
                    <h3 class="card-title">{{name}}</h3>
                    <p class="card-text">{{description}}</p>
                    {{!-- On affiche le prix du premier palier tarifaire --}}
                    <p class="price">à partir de {{pricing_tiers.[0].price_per_day}}€/jour</p>
                </div>
            </a>
            {{/each}} {{!-- Fin de la boucle --}}
        </div>
    </div>
</section>