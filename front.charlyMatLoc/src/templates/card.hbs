<section id="page-card" class="page">
    <div class="container">
        <div class="cart-header">
            <h1>Panier de {{#if user}}{{user.email}}{{else}}vous{{/if}}</h1>
            <a href="#" data-page="catalog" class="btn btn-secondary">Continuer mes achats</a>
        </div>

        {{#if cart.items_count}}
        <div class="card cart-items">
            <div class="card-body">
                <table class="cart-table">
                    <thead>
                        <tr>
                            <th>Outil</th>
                            <th>Date de début</th>
                            <th>Date de fin</th>
                            <th>Durée</th>
                            <th>Quantité</th>
                            <th>Prix/jour</th>
                            <th>Total</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each cart.items}}
                        <tr>
                            <td>
                                <a href="#" data-page="tool-detail" data-id="{{this.tool.id}}">
                                    {{this.tool.name}}
                                </a>
                            </td>
                            <td>{{this.start_date}}</td>
                            <td>{{this.end_date}}</td>
                            <td>{{this.duration_days}} jour(s)</td>
                            <td>
                                <input
                                    type="number"
                                    class="cart-quantity-input"
                                    data-item-id="{{this.id}}"
                                    value="{{this.quantity}}"
                                    min="1"
                                >
                            </td>
                            <td>{{this.price_per_day}} €</td>
                            <td><strong>{{this.total_price}} €</strong></td>
                            <td>
                                <button class="btn btn-danger btn-sm" data-remove-item="{{this.id}}">
                                    Supprimer
                                </button>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card cart-summary">
            <div class="card-body">
                <h2>Résumé de la commande</h2>
                <p><strong>Nombre d'articles :</strong> {{cart.items_count}}</p>
                <p class="total-price"><strong>Total :</strong> {{cart.total}} €</p>
                <button class="btn btn-primary btn-lg" data-checkout>
                    Valider la commande
                </button>
            </div>
        </div>

        {{else}}
        <div class="card empty-cart">
            <div class="card-body">
                <p class="card-text">Aucun article dans le panier.</p>
                <a href="#" data-page="catalog" class="btn btn-primary">Retour au catalogue</a>
            </div>
        </div>
        {{/if}}
    </div>
</section>

<style>
