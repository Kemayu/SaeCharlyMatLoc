<section id="page-card" class="page cart-page">
    <div class="container">
        <div class="cart-header">
            <div>
                <h1>Mon panier</h1>
                {{#if user}}
                <p class="cart-subtitle">Connecté en tant que <strong>{{user.email}}</strong></p>
                {{/if}}
            </div>
            <a href="#" data-page="catalog" class="btn btn-secondary">Continuer mes achats</a>
        </div>

        {{#if cart.items_count}}
        <div class="cart-layout">
            <div class="cart-items">
                {{#each cart.items}}
                <article class="cart-item-card">
                    <header class="cart-item-card__header">
                        <div class="cart-item-card__title">
                            <h2>
                                <a href="#" data-page="tool-detail" data-id="{{this.tool.id}}">
                                    {{this.tool.name}}
                                </a>
                            </h2>
                            <p class="cart-item-card__period-label">{{this.display_period}}</p>
                        </div>
                        <button type="button" class="cart-remove-button" data-remove-item="{{this.id}}">
                            Supprimer
                        </button>
                    </header>

                    <div class="cart-item-card__body">
                        <div class="cart-item-card__column cart-item-card__dates">
                            <span class="cart-item-label">Période</span>
                            <span class="cart-item-value">{{this.display_period}}</span>
                            <span class="cart-item-meta">{{this.duration_days}} jour(s)</span>
                        </div>
                        <div class="cart-item-card__column cart-item-card__quantity">
                            <span class="cart-item-label">Quantité</span>
                            <input
                                type="number"
                                class="cart-quantity-input"
                                data-item-id="{{this.id}}"
                                value="{{this.quantity}}"
                                min="1"
                            >
                        </div>
                        <div class="cart-item-card__column cart-item-card__pricing">
                            <span class="cart-item-label">Tarif</span>
                            <span class="cart-item-value">{{this.price_per_day}} € / jour</span>
                            <span class="cart-item-total">{{this.total_price}} €</span>
                        </div>
                    </div>
                </article>
                {{/each}}
            </div>

            <aside class="cart-summary card">
                <div class="card-body">
                    <h2>Résumé de la commande</h2>
                    <dl class="summary-list">
                        <div class="summary-item">
                            <dt>Articles</dt>
                            <dd>{{cart.items_count}}</dd>
                        </div>
                        <div class="summary-item total">
                            <dt>Total à régler</dt>
                            <dd>{{cart.total}} €</dd>
                        </div>
                    </dl>
                    <button class="btn btn-primary btn-lg" data-checkout>
                        Valider la commande
                    </button>
                </div>
            </aside>
        </div>
        {{else}}
        <div class="card empty-cart">
            <div class="card-body">
                <p class="card-text">Votre panier est vide.</p>
                <a href="#" data-page="catalog" class="btn btn-primary">Voir le catalogue</a>
            </div>
        </div>
        {{/if}}
    </div>
</section>
